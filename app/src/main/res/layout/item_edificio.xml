<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:background="@drawable/edification_container_list_item"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edificioName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Building"
            android:textColor="#515151"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/edificioImage"
            android:layout_width="match_parent"
            android:clipToOutline="true"
            android:layout_height="140dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/border_image"
            android:src="@drawable/iglesia_prueba" />

        <Button
            android:id="@+id/viewButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="#006666"
            android:background="@drawable/edification_container_list_button"
            android:text="Ver edificaciÃ³n"
            android:drawableEnd="@drawable/baseline_arrow_forward_24"/>
    </LinearLayout>
</FrameLayout>